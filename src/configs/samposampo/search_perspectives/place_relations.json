{
    "id": "place_relations",
    "endpoint": {
        "url": "https://ldf.fi/sampo-qlever/sparql",
        "useAuth": false,
        "prefixesFile": "SparqlQueriesPrefixes.js",
        "triplestore": "qlever"
    },
    "sparqlQueriesFile": "SparqlQueriesRelations.js",
    "baseURI": "http://ldf.fi/relse",
    "URITemplate": "<BASE_URI>/<LOCAL_ID>",
    "facetClass": "relations:Relation",
    "frontPageImage": "main_page/lonnrot.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": false,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "maps": {
        "placesRelations": {
            "center": [
                65.0,
                22.5
            ],
            "zoom": 4
        }
    },
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "place_relations": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "placeRelationProperties",
                "pagesize": 30,
                "sortBy": "pagelinks",
                "sortDirection": "desc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "placeRelationInstancePageProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    }
                }
            }
        },
        "placesRelations": {
            "tabID": 1,
            "component": "LeafletMap",
            "tabPath": "map",
            "tabIcon": "AddLocation",
            "sparqlQuery": "relationMapQuery",
            "facetClass": "place_relations",
            "filterTarget": "relation",
            "resultMapper": "mapPlaces",
            "instanceConfig": {
                "propertiesQueryBlock": "placePropertiesInfoWindow",
                "relatedInstances": "relatedRelations",
                "createPopUpContent": "createPopUpContentLetterSampo"
            }
        },
        "share": {
            "tabID": 2,
            "component": "ExportLink",
            "tabPath": "share",
            "tabIcon": "IosShare",
            "resultClass": "place_relations",
            "facetClass": "place_relations"
        }
    },
    "properties": [
        {
            "id": "image",
            "valueType": "image",
            "previewImageHeight": 160,
            "makeLink": false,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "hideHeader": true
        },
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "person",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "place",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150,
            "onlyOnInstancePage": false
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "type",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "related",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": true,
            "minWidth": 300,
            "showSource": true,
            "sourceExternalLink": false,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "datasource",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 200
        },
        {
            "id": "website",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 200,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "additionalSource",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 200,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        }
    ],
    "facets": {
        "person": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "relations:personSubject",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "relations:personSubject/skos:prefLabel"
        },
        "place": {
            "predicate": "relations:placeObject",
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "relations:placeObject/skos:prefLabel",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')"
        },
        "type": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "relations:relationType",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "relations:relationType/skos:prefLabel"
        },
        "datasource": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "dct:source",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "dct:source/skos:prefLabel",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'en')"
        },
        "person_datasource": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "relations:personSubject/sampos:in_dataset",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "relations:personSubject/sampos:in_dataset/skos:prefLabel",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'en')"
        },
        "pagelinks": {
            "sortBy": "instanceCount",
            "sortByPattern": "{ SELECT ?id ?orderBy WHERE { ?id a <FACET_CLASS> ; relations:personSubject/sampos:pagelinks ?orderBy } }"
        }
    }
}