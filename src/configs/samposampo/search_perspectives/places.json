{
    "id": "places",
    "endpoint": {
        "url": "https://ldf.fi/sampo/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPlaces.js",
    "baseURI": "http://ldf.fi/sampo",
    "URITemplate": "<BASE_URI>/places/<LOCAL_ID>",
    "facetClass": "sch:Place",
    "frontPageImage": "main_page/manuscripts-452x262.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": false,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "places": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "placeProperties",
                "pagesize": 10,
                "sortBy": null,
                "sortDirection": null
            },
            "instanceConfig": {
                "propertiesQueryBlock": "placeProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    }
                }
            }
        },
        "placesLocations": {
            "tabID": 1,
            "component": "LeafletMap",
            "tabPath": "map",
            "tabIcon": "AddLocation",
            "sparqlQuery": "placesMapQuery",
            "facetClass": "places",
            "filterTarget": "place",
            "resultMapper": "mapPlaces",
            "instanceConfig": {
                "propertiesQueryBlock": "placePropertiesInfoWindow",
                "relatedInstances": "peopleRelatedTo",
                "createPopUpContent": "createPopUpContentLetterSampo"
            }
        }
    },
    "maps": {
        "placesLocations": {
            "center": [
                65.0,
                22.5
            ],
            "zoom": 4
        }
    },
    "properties": [
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 250
        },
        {
            "id": "sampledLatitude",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150,
            "disableSort": true
        },
        {
            "id": "sampledLongitude",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150,
            "disableSort": true
        },
        {
            "id": "latitude",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150,
            "onlyOnInstancePage": true
        },
        {
            "id": "longitude",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 150,
            "onlyOnInstancePage": true
        },
        {
            "id": "source",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 250,
            "expandedOnInstancePage": true
        }
    ],
    "facets": {
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        },
        "onMap": {
            "containerClass": "four",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "sampos:hasCoordinates",
            "literal": true,
            "valueType": "xsd:boolean",
            "hideUnknownValue": true,
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "sampos:hasCoordinates",
            "sortDirection": "desc",
            "pieChartButton": true
        },
        "source": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "^foaf:focus/dce:source",
            "literal": true,
            "hideUnknownValue": true,
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "^foaf:focus/dce:source",
            "sortDirection": "desc",
            "pieChartButton": true
        }
    }
}