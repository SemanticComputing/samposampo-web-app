{
    "id": "people",
    "endpoint": {
        "url": "https://ldf.fi/sampo/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPeople.js",
    "baseURI": "http://ldf.fi/sampo",
    "URITemplate": "<BASE_URI>/people/<LOCAL_ID>",
    "facetClass": "sch:Person",
    "frontPageImage": "main_page/works-452x262.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": false,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "people": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "personPropertiesFacetResults",
                "pagesize": 30,
                "sortBy": "pagelinks",
                "sortDirection": "desc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "personPropertiesInstancePage",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    }
                }
            }
        }
    },
    "properties": [
        {
            "id": "image",
            "valueType": "image",
            "previewImageHeight": 160,
            "makeLink": false,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "hideHeader": true
        },
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "altLabel",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 300,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "gender",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 50
        },
        {
            "id": "birth_time",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 120,
            "expandedOnInstancePage": true
        },
        {
            "id": "birth_place",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 80,
            "showSource": true,
            "sourceExternalLink": false,
            "expandedOnInstancePage": true
        },
        {
            "id": "death_time",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 100,
            "expandedOnInstancePage": true
        },
        {
            "id": "death_place",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 80,
            "showSource": true,
            "sourceExternalLink": false,
            "expandedOnInstancePage": true
        },
        {
            "id": "website",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 80,
            "expandedOnInstancePage": true
        },
        {
            "id": "external",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 80,
            "expandedOnInstancePage": true
        }
    ],
    "facets": {
        "pagelinks": {
            "sortByPattern": "{ SELECT ?id ?orderBy WHERE { ?id a <FACET_CLASS> ; sampos:pagelinks ?orderBy } }"
        },
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        },
        "gender": {
            "containerClass": "three",
            "facetType": "list",
            "predicate": "(^foaf:focus)/sch:gender",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "(^foaf:focus)/sch:gender/skos:prefLabel"
        },
        "birth_place": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "(^foaf:focus)/sch:birthPlace",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "sortByPredicate": "(^foaf:focus)/sch:birthPlace/skos:prefLabel"
        },
        "birth_time": {
            "containerClass": "four",
            "facetType": "timespan",
            "filterType": "timespanFilter",
            "dataType": "xsd:date",
            "max": null,
            "min": null,
            "predicate": "(^foaf:focus)/sampos:birth_time",
            "startProperty": "time:hasBeginning",
            "endProperty": "time:hasEnd",
            "sortByAscPredicate": "(^foaf:focus)/sampos:birth_time/time:hasBeginning",
            "sortByDescPredicate": "(^foaf:focus/sampos:birth_time/time:hasEnd"
        },
        "death_place": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "(^foaf:focus)/sch:deathPlace",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'fi')",
            "sortByPredicate": "(^foaf:focus)/sch:deathPlace/skos:prefLabel"
        },
        "death_time": {
            "containerClass": "four",
            "facetType": "timespan",
            "filterType": "timespanFilter",
            "dataType": "xsd:date",
            "max": null,
            "min": null,
            "predicate": "(^foaf:focus)/sampos:death_time",
            "startProperty": "time:hasBeginning",
            "endProperty": "time:hasEnd",
            "sortByAscPredicate": "(^foaf:focus)/sampos:death_time/time:hasBeginning",
            "sortByDescPredicate": "(^foaf:focus/sampos:death_time/time:hasEnd"
        },
        "external": {
            "containerClass": "ten",
            "facetType": "list",
            "predicate": "sampos:in_dataset",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "pieChartButton": true,
            "sortByPredicate": "sampos:in_dataset/skos:prefLabel"
        }
    }
}